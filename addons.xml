<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.mediamogul" name="Media Mogul Repo" version="1.0.6" provider-name="mediamogul">
	<extension point="xbmc.addon.repository" name="Media Mogul Repository">
		<info compressed="false">https://raw.githubusercontent.com/mmogul/mediamogul.co.uk/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/mmogul/mediamogul.co.uk/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/mmogul/mediamogul.co.uk/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Media Mogul</summary>
		<description>Install and Recover from Media Mogul</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.program.mediamogulwizard" name="Media Mogul Wizard" version="1.0.6" provider-name="www.mediamogul.co.uk">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="plugin.program.mediamogultoolkit" version="0.0.1"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Media Mogul Wizard</summary>
    <description lang="en">Easy Install With KODI / XBMC.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.program.mediamogultoolkit" name="[COLOR red]Media Mogul Toolkit[/COLOR]" version="0.0.3" provider-name="Media Mogul">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Media Mogul Toolkit</summary>
    <description lang="en">Media Mogul Toolkit allows you to get access to the latest Media Mogul Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.program.mediamogulprotoolkit" name="[COLOR khaki]Media Mogul Pro Toolkit[/COLOR]" version="0.0.2" provider-name="Media Mogul">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Media Mogul Pro Toolkit</summary>
    <description lang="en">Media Mogul Pro Toolkit allows you to get access to the LATEST Media Mogul Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.mediamogulurban" version="0.0.1" name="Mogul Urban Directory" provider-name="Media Mogul">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Media Mogul Urban Directory</summary>
        <description>Media Mogul Urban Directory.</description>
        <platform>all</platform>
    </extension>
</addon>

